{
  "aget_version": "2.5.0",
  "created": "2025-10-10",
  "template": "advisor",
  "tier": "specialized",
  "agent_name": "template-advisor-aget",
  "instance_type": "aget",
  "domain": "advisory-template",
  "roles": ["advisor"],
  "persona": null,
  "features": {
    "internal_state_enabled": true,
    "session_persistence": true,
    "progress_tracking": true,
    "commitment_tracking": true,
    "scoped_write_permissions": true
  },
  "advisory_capabilities": {
    "read_only": "external_systems",
    "can_write_internal_state": true,
    "can_execute": false,
    "can_modify_files": "scoped_to_internal_state",
    "can_create_files": "scoped_to_internal_state",
    "can_recommend": true,
    "can_analyze": true,
    "can_critique": true,
    "write_scope": {
      "enforcement": "strict",
      "allowed_paths": [
        ".aget/sessions/**",
        ".aget/client_progress/**",
        ".aget/commitments/**",
        ".aget/context/**",
        ".aget/learning_history/**",
        ".aget/checkpoints/**",
        ".aget/evolution/**"
      ],
      "forbidden_paths": [
        "src/**",
        "tests/**",
        "workspace/**",
        "products/**",
        "data/**",
        "docs/**",
        "AGENTS.md",
        "CLAUDE.md",
        "README.md",
        "version.json",
        "**"
      ],
      "rationale": "Advisory with internal state: Advisors maintain session continuity and progress tracking (.aget/**) while not modifying external systems (user's code/docs)"
    },
    "supported_personas": [
      "teacher",
      "mentor",
      "consultant",
      "guru",
      "coach"
    ],
    "persona_traits": {
      "teacher": {
        "focus": "instruction",
        "style": "structured_learning",
        "communication": "didactic",
        "examples": "comprehensive",
        "verification": "quiz_and_check"
      },
      "mentor": {
        "focus": "growth",
        "style": "guided_discovery",
        "communication": "supportive",
        "examples": "context_driven",
        "verification": "reflective_questions"
      },
      "consultant": {
        "focus": "solutions",
        "style": "professional_analysis",
        "communication": "formal",
        "examples": "options_with_tradeoffs",
        "verification": "requirements_validation"
      },
      "guru": {
        "focus": "expertise",
        "style": "deep_knowledge",
        "communication": "authoritative",
        "examples": "best_practices",
        "verification": "principle_based"
      },
      "coach": {
        "focus": "performance",
        "style": "iterative_feedback",
        "communication": "encouraging",
        "examples": "incremental_improvement",
        "verification": "practice_based"
      }
    }
  },
  "aget_group": null,
  "managed_by": "none",
  "intelligence_enabled": true,
  "collaboration_enabled": true,
  "patterns": {
    "session": "1.1.0",
    "housekeeping": "1.0.0",
    "documentation": "1.0.0",
    "recovery": "1.0.0",
    "meta": "0.1.0",
    "intelligence": "1.0.0",
    "specification": "1.1.0",
    "versioning": "1.0.0"
  },
  "compatibility": {
    "backwards_compatible": false,
    "breaking_changes": [
      "CLAUDE.md must be symlink to AGENTS.md",
      "Pattern versioning system required",
      "Session metadata schema v1.0",
      "Naming convention: -aget (read-only) required for advisors",
      "aget_group field required for portfolio agents",
      "Contract tests required for wake and identity protocols",
      "Advisor role requires instance_type: aget (read-only enforcement)",
      "Persona must be one of: teacher, mentor, consultant, guru, coach"
    ],
    "deprecated": []
  },
  "notes": "v2.5.0 Advisor Template - Read-only advisory agents with persona differentiation (teacher/mentor/consultant/guru/coach). Enforces advisory boundaries through contract tests and capability declarations. Based on L95, L114, L118, D11, ADVISOR_MODE_PROTOCOL_v1.0."
}
